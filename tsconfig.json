{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@doom-ui/core": ["packages/core/src"],
      "@doom-ui/components": ["packages/components/src"]
    }
  },
  "include": ["packages/*/src"],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ]
}
