{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@theme": ["./src/theme"],
      "@theme/*": ["./src/theme/*"],
      "@plugins": ["./src/plugins"],
      "@plugins/*": ["./src/plugins/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
